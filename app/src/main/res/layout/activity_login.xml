<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.LoginActivity">

    <ImageView android:layout_width="150dp"
               android:layout_height="95dp"
               android:contentDescription="@string/common_google_play_services_enable_button"
               app:srcCompat="@drawable/group66"
               android:id="@+id/google_button"
               android:visibility="visible"
               android:layout_marginBottom="108dp"
               app:layout_constraintBottom_toBottomOf="parent"
               android:layout_marginEnd="8dp"
               app:layout_constraintEnd_toStartOf="@+id/facebook_button"
               android:layout_marginStart="8dp"
               app:layout_constraintStart_toStartOf="parent"/>
    <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="224dp"
            android:layout_marginRight="224dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="456dp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Google"
            android:visibility="gone"/>


    <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            tools:layout_editor_absoluteY="42dp"
            tools:ignore="MissingConstraints"/>
    <ImageView android:layout_width="150dp" android:layout_height="98dp"
               app:srcCompat="@drawable/group67"
               android:id="@+id/facebook_button"
               android:visibility="visible"
               android:layout_marginBottom="108dp"
               app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginEnd="20dp" android:layout_marginTop="8dp"
               app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"
               android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintHorizontal_bias="0.995"/>
    <TextView
            android:text="Connecter-vous par votre compte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message_connection"
            android:textSize="15sp"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
           />
    <android.support.v7.widget.AppCompatImageView
            android:src="@drawable/logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="231dp"
            android:layout_margin="25dp"
            app:layout_constraintBottom_toTopOf="@id/message_connection"
            android:layout_height="203dp"/>


</android.support.constraint.ConstraintLayout>