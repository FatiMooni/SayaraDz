<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-50dp"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
>

    <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            app:showDividers="beginning|middle|end"
            android:weightSum="14">

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp">
            <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/general"
                    android:textColor="@android:color/black"
                    android:padding="10dp"
                    android:layout_marginBottom="45dp"
                    android:textSize="22sp"
            />

            <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_marginTop="200dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner_layout_style"
                    android:layout_height="wrap_content">

                <Spinner
                        style="@style/spinner_style"
                        android:id="@+id/carburant_spinner"
                        android:background="@android:color/transparent"
                />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner_layout_style"
                    android:layout_height="wrap_content">

                <Spinner
                        style="@style/spinner_style"
                        android:id="@+id/marque_spinner"
                        android:background="@android:color/transparent"
                />


            </android.support.v7.widget.LinearLayoutCompat>


            <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner_layout_style"
                    android:layout_height="wrap_content">

                <Spinner
                        style="@style/spinner_style"
                        android:id="@+id/modele_spinner"
                        android:background="@android:color/transparent"
                        android:prompt="@string/app_name"
                />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner_layout_style"
                    android:layout_height="wrap_content">

                <Spinner
                        style="@style/spinner_style"
                        android:id="@+id/versions_spinner"
                        android:background="@android:color/transparent"
                />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_marginTop="250dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:outlineAmbientShadowColor="@color/colorAccent"
                    android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatTextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="@string/colors"
                />
                <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/input_couleur"
                        android:hint="Ex. Black"

                />

            </android.support.v7.widget.LinearLayoutCompat>
            <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_marginTop="300dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatTextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="@string/kilometrage"
                />
                <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tooltipText="write here"
                        android:id="@+id/input_km"
                        android:hint="0.0 Kms"
                        android:textAlignment="textEnd"

                />

            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_marginTop="350dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:outlineAmbientShadowColor="@color/colorAccent"
                    android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatTextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Price"
                />
                <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tooltipText="write here"
                        android:id="@+id/input_prix"
                        android:hint="0.00 DA"
                        android:textAlignment="textEnd"

                />

            </android.support.v7.widget.LinearLayoutCompat>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:padding="5dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
        >
            <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Autres Information"
                    android:textColor="@android:color/black"
                    android:padding="10dp"
                    android:layout_marginBottom="45dp"
                    android:textSize="22dp"
            />
            <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="45dp"
                    android:textColor="@android:color/secondary_text_light"
                    android:hint="Ajouter une description"
                    android:id="@+id/input_description"
                    android:layout_marginBottom="20dp"
                    android:padding="20dp"
            />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:padding="5dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
        >
            <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/options"
                    android:textColor="@android:color/black"
                    android:padding="10dp"
                    android:layout_marginBottom="45dp"
                    android:textSize="22dp"
            />

            <android.support.design.chip.ChipGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="50dp"
                    android:id="@+id/options_chips"
                    android:theme="@style/Theme.MaterialComponents"
            >

            </android.support.design.chip.ChipGroup>
            <android.support.design.widget.TextInputEditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:visibility="invisible"
                    android:id="@+id/option_input"
                    android:hint="@string/app_name"/>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
        >
            <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/picture"
                    android:textColor="@android:color/black"
                    android:padding="10dp"
                    android:layout_marginBottom="45dp"
                    android:textSize="22dp"
            />

            <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:pointerIcon="text"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center|top"
                    app:srcCompat="@drawable/ic_add_a_photo_black_24dp"
                    android:id="@+id/add_picture"
            />
            <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:layout_marginTop="100dp"
                    android:gravity="bottom"
                    android:text="add Your pics here "/>
            <android.support.design.circularreveal.CircularRevealGridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/spinner_style"
                    android:id="@+id/pictures_layout"
                    android:layout_marginTop="100dp"
                    android:columnCount="3"
                    android:rowCount="2"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false"
            >
            </android.support.design.circularreveal.CircularRevealGridLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Valider l'annonce"
                android:backgroundTint="@color/colorAccent"
                android:id="@+id/button_validate"
                tools:ignore="InvalidId"/>
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v4.widget.NestedScrollView>
