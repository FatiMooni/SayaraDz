<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.UserOffersActivity">

    <FrameLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/toolbar_holder"
            android:background="@drawable/header"

    >
        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                app:navigationIcon="@drawable/cancel_white"
                android:pointerIcon="hand"
                app:title="Mes Offres"
                app:subtitleTextColor="@color/colorLightGrey"
                app:titleTextColor="@color/colorWhite"
                app:subtitle="Etats des différentes offres postées"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:id="@+id/rv_offers"
            tools:listitem="@layout/user_offer_card"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/guideline4">

    </android.support.v7.widget.RecyclerView>

    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline4" app:layout_constraintGuide_begin="87dp"
                                          android:orientation="horizontal"/>


</android.support.constraint.ConstraintLayout>