<layer-list xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">
    <item><shape xmlns:android="http://schemas.android.com/apk/res/android">
        <solid android:color="@android:color/transparent" />
        <corners android:radius="20dp" />
        <stroke
                android:width="1dp"
                android:color="#BDBDBD"

        />
        <padding  android:bottom="6dp"
                  android:top="5dp"
                  android:left="5dp"
                  android:right="5dp"/>
    </shape>
    </item>
    <item>
        <bitmap android:gravity="right|center"
                android:src="@drawable/down_spinner"
                tools:ignore="VectorDrawableCompat"/>

    </item>

</layer-list>